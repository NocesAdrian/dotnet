<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Myapp_1.MainWindow"
        Title="Temperature Converter">


<StackPanel>
<TextBlock Margin="5"
	   FontSize="24"
	   Text="Temperature Converter" 
	   HorizontalAlignment="Center"
/>

<Grid ShowGridLines="False" Margin="5" ColumnDefinitions="auto, auto, auto" RowDefinitions="Auto, Auto, Auto" HorizontalAlignment="Center">

	<Label Grid.Row="0" Grid.Column="0">Celsius</Label>

	<TextBox Name="Celsius" Grid.Row="0" Grid.Column="1" Text="0"/>
	
	<TextBlock Name="Result1" Grid.Row="0" Grid.Column="2" Margin="5"/>

	<Label Grid.Row="1" Grid.Column="0">Farenheit</Label>

	<TextBox Name="Farenheit" Grid.Row="1" Grid.Column="1" Text="0"/>

	<TextBlock Name="Result2" Grid.Row="1" Grid.Column="2" Margin="5"/>

	<Button Click="Button_OnClick" Grid.Row="2" Grid.Column="0" Background="LightGreen" Foreground="White">Calculate</Button>
	
	<TextBlock Margin="5" Grid.Row="2" Grid.Column="1" Text="Enter a number to convert"/>

</Grid>

</StackPanel>

</Window>
